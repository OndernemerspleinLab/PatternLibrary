<div class="hide-svg">{{> atoms-figures }}</div>

<ul class="tabs">
	<li class="tab">
		{{#tabs.overviewActive}}
			<span class="media tab-link is-active">
		{{/tabs.overviewActive}}
		{{^tabs.overviewActive}}
			<a class="media tab-link" href="#">
		{{/tabs.overviewActive}}
			<svg aria-hidden="true" class="tab-icon tab-icon--overzicht media-figure">
				<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#figures-overzicht"></use>
			</svg>
			<span class="tab-text media-text media-text">Overzicht</span>
		{{#tabs.overviewActive}}
			</span>
		{{/tabs.overviewActive}}
		{{^tabs.overviewActive}}
			</a>
		{{/tabs.overviewActive}}
	</li>
	<li class="tab">
		<span class=" tab-link--large">
			{{#tabs.contentActive}}
				<span class="media tab-link tab-link--content is-active">
			{{/tabs.contentActive}}
			{{^tabs.contentActive}}
				<a class="media tab-link tab-link--content" href="#">
			{{/tabs.contentActive}}
				<svg aria-hidden="true" class="tab-icon media-figure">
					<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#figures-inhoud"></use>
				</svg>
				<span class="tab-text media-text">Inhoud</span>
			{{#tabs.contentActive}}
				</span>
			{{/tabs.contentActive}}
			{{^tabs.contentActive}}
				</a>
			{{/tabs.contentActive}}
		</span>
		<span open-close-single class="tab-openClose tab-link--small {{#tabs.contentActive}}is-active{{/tabs.contentActive}}" ng-class="{ 'is-opened': viewModel.isOpened('content') }">
			<button class="tab-button" ng-click="viewModel.toggle('content')">
				<span class="media tab-link tab-openClose-link tab-link--openClose {{#tabs.contentActive}}is-active{{/tabs.contentActive}}" ng-class="{ 'is-opened': viewModel.isOpened('content') }" href="#">
					<svg aria-hidden="true" class="tab-icon media-figure">
						<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#figures-inhoud"></use>
					</svg>
					<span class="tab-text media-text">Inhoud</span>
					<svg class="tab-openClose-icon media-figure" ng-class="{ 'is-opened': viewModel.isOpened('content') }" aria-hidden="true">
	                    <use xlink:href="#figures-chevron-down"></use>
	                </svg>
				</span>
			</button>
			<div class="ng-hide tab-openClose-content ngAnimate-height" ng-show="viewModel.isOpened('content')">
				<ul>
					<li>1</li>
					<li>2</li>
					<li>3</li>
					<li>4</li>
				</ul>
			</div>
		</span>
	</li>
	<li class="tab">
		<a class="media tab-link" href="#">
			<svg aria-hidden="true" class="tab-icon media-figure">
				<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#figures-wet-7003"></use>
			</svg>
			<span class="tab-text media-text">Wetten en regels</span>
		</a>
	</li>
	<li class="tab">
		<a class="media tab-link" href="#">
			<svg aria-hidden="true" class="tab-icon media-figure">
				<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#figures-consument-6003"></use>
			</svg>
			<span class="tab-text media-text">Direct regelen</span>
		</a>
	</li>
	<li class="tab">
		<a class="media tab-link" href="#">
			<svg aria-hidden="true" class="tab-icon media-figure">
				<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#figures-discussies"></use>
			</svg>
			<span class="tab-text media-text">Forum</span>
		</a>
	</li>
</ul>