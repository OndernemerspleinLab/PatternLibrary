	</div>
	{{> organisms-header }}
	<div class="layoutContainer gridContainer homepageHeader-container">
		<div class="column homepageHeader-topTasks">
			<label class="filterContent" audience-selector>
					<span class="filterContent-text">
						<strong>Ik ben een</strong>
					</span>
					<select class="filterContent-select" ng-model="viewModel.selectedAudienceStore.selectedAudience">
